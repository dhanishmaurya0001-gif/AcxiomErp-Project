@model AcxiomErp.Models.Customer

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background-image: url('/images/erp.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        padding: 2rem;
    }

    h2 {
        color: #0d6efd;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        margin-bottom: 2rem;
    }

    form {
        background-color: rgba(255,255,255,0.9);
        padding: 2rem;
        border-radius: 15px;
        max-width: 500px;
        margin: auto;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    input.form-control {
        margin-bottom: 1rem;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        transition: box-shadow 0.3s, border-color 0.3s;
    }

        input.form-control:focus {
            border-color: #2e86de;
            box-shadow: 0 0 8px rgba(46,134,222,0.3);
            outline: none;
        }

    button.btn-submit {
        width: 100%;
        background: linear-gradient(135deg, #54a0ff, #2e86de);
        color: white;
        font-weight: 600;
        padding: 0.75rem;
        border: none;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        button.btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }
</style>

<h2 class="text-center">Edit Customer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input asp-for="Name" class="form-control" placeholder="Name" />
    <input asp-for="Email" class="form-control" placeholder="Email" />
    <input asp-for="Phone" class="form-control" placeholder="Phone" />
    <input asp-for="Address" class="form-control" placeholder="Address" />
    <button type="submit" class="btn-submit mt-3">Update Customer</button>
</form>
