@model AcxiomErp.Models.Setting

@{
    ViewData["Title"] = "Edit Setting";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/settings.css" />

<div class="container mt-5">
    <h2 class="mb-4">✏️ Edit Setting</h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Edit" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" asp-for="Category" required>
                        <option>Application</option>
                        <option>Security</option>
                        <option>Modules</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Key</label>
                    <input asp-for="Key" class="form-control" readonly />
                    <small class="text-muted">Key cannot be changed.</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Value</label>
                    <input asp-for="Value" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>

            </form>

        </div>
    </div>
</div>
