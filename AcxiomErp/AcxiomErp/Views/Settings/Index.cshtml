@model IEnumerable<AcxiomErp.Models.Setting>

@{
    ViewData["Title"] = "Admin Settings";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/settings.css" />

<div class="container mt-5">

    <h2 class="mb-4">⚙️ ERP Admin Settings</h2>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="settingsTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="app-tab" data-bs-toggle="tab" href="#app" role="tab">Application Settings</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="security-tab" data-bs-toggle="tab" href="#security" role="tab">Security Settings</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="modules-tab" data-bs-toggle="tab" href="#modules" role="tab">Module Settings</a>
        </li>
    </ul>

    <div class="tab-content mt-4">

        <!-- Application Settings Tab -->
        <div class="tab-pane fade show active" id="app" role="tabpanel">
            @Html.Partial("_SettingsTable", Model.Where(s => s.Category == "Application"))
        </div>

        <!-- Security Settings -->
        <div class="tab-pane fade" id="security" role="tabpanel">
            @Html.Partial("_SettingsTable", Model.Where(s => s.Category == "Security"))
        </div>

        <!-- Module Settings -->
        <div class="tab-pane fade" id="modules" role="tabpanel">
            @Html.Partial("_SettingsTable", Model.Where(s => s.Category == "Modules"))
        </div>

    </div>

</div>
